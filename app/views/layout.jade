doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/assets/styles/main.css')
        link(rel='stylesheet', href='/assets/styles/vendor.css')
        script(src='/assets/scripts/main.js')
        script(src='/assets/scripts/vendor.js')
        script(src='/assets/scripts/plugins.js')
    body
      .container
        .text-center
          - if (messages && messages.error)
            - each message in messages.error
              p.alert-danger
                span= message
          - if (messages && messages.success)
            - each message in messages.success
              p.alert-success
                span= message
      block content
