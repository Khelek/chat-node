extends ../layout

block content
  .container
    .header
      ul.nav.nav-pills.pull-right
        li.active
          a(href='/') Home
        li
          a(href='/chats') Chats
      h3.text-muted Node.js Socket.io Chat
    .jumbotron
      h1 Welcome to my awesome chat!
      p.lead
        | Create a new chat room!
      p
        button(type="button", class="btn btn-warning", data-toggle="collapse" data-target="#demo", href="#demo")
          | New chat
      #demo.panel-collapse.collapse
        .panel-body
          .text-center
           form(action='/chats', method='post')
             div.text-center(data-role='fieldcontain')
               fieldset(data-role='controlgroup')
                 input(id='nickname',type='text',value='',placeholder='nickname',name='nickname')
             div(data-role='fieldcontain')
               fieldset(data-role='controlgroup')
                 input(id='roomname',type='text',value='',placeholder='roomname',name='roomname')
             p
               div(data-role='fieldcontain')   
                 button(type='submit', class='btn btn-default btn-success')
                   | Create!
    .text-center
      h2 Existing chats:
    .row.marketing
      .col-lg-12.text-center
        h4 Chatname - uuid
        h4 Chatname - uuid
        h4 Chatname - uuid
        a(href='/chats') More chats
